<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="com.example.demo.vulnerable.MinOS">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="12dp"
        android:fontFamily="serif-monospace"
        android:text="Support for Vulnerable minimum OS"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="24dp"
        android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="16dip"
            android:background="@drawable/circle_button">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/circle_button"
                android:fontFamily="serif-monospace"
                android:text=" Description.."
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:background="@drawable/circle_button"
                android:fontFamily="serif-monospace"
                android:text="Applications that support known vulnerable OS versions are more likely to be using vulnerable versions of system libraries/APIs, leaving the application vulnerable to publicly known attacks."
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/l1"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="14dp"
        android:background="@drawable/circle_button">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:background="@android:color/background_dark"
            android:fontFamily="serif-monospace"
            android:text="Challenge"
            android:textAlignment="center"
            android:textColor="@color/challengeTitleColor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="45dp"
            android:background="@android:color/background_dark"
            android:fontFamily="serif-monospace"
            android:text=" What is the minimum SDK version the application supports?"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="13dp"
            android:background="@android:color/background_dark"
            android:hint=" Enter"
            android:inputType="number"
            android:textColor="@color/challengeTitleColor"
            android:textColorHint="@android:color/background_light"
            android:textSize="36sp" />
    </RelativeLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_below="@+id/l2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_purple"
            android:fontFamily="serif-monospace"
            android:onClick="OnClickGo"
            android:text="GO"
            android:textColor="@color/challengeTitleColor"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>
