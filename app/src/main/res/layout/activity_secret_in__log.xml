<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.vulnerable.secret_in_Log"
    android:background="?attr/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="serif-monospace"
            android:text="Keeping Secrets in Logs"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:fontFamily="serif-monospace"
            android:text="  Description.."
            android:textColor="@android:color/background_light"
            android:textSize="30dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView8"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/circle_button"
            android:fontFamily="serif-monospace"
            android:text="Logging data increases the risk of exposure of that data and reduces system performance. Multiple public security incidents have occurred as a result of logging sensitive user data."
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="25dp"
            android:background="@drawable/circle_button"
            android:fontFamily="serif-monospace"
            android:text="CHALLENGE"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="45dp"
            android:background="@android:color/background_dark"
            android:fontFamily="serif-monospace"
            android:text=" Enter the SSN displayed in Logcat"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/EnterCred"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:hint="Enter here"
            android:inputType="number" />

        <Button
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView10"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView10"
            android:background="@drawable/button_purple"
            android:text="GO"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />


        <Button
            android:id="@+id/generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="41dp"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:background="@drawable/button_purple"
            android:onClick="generate"
            android:text="Generate Social Security number"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </RelativeLayout>

